{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Build",
        "type": "shell",
        "command": [
            "bash build.sh"
            ],
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "problemMatcher": ["$gcc"],
        "group": {
          "kind": "build"
        }
      },
      {
        "label": "Run",
        "type": "shell",
        "command": [
              "bash run.sh"
            ],
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "group": {
          "kind": "build"
        }
      }
    ]
  }